<h1>Listando tutti i todo</h1>

<p>
  <%= link_to 'Crea un nuovo todo', new_todo_path %>
</p>

<table>
  <tr>
    <th>name</th>
    <th>description</th>
    <th></th>
  </tr>
  <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.name %></th>
      <td><%= todo.description%></th>
      <td>
        <%= link_to 'Visualizza', todo_path(todo) %>
        <%= link_to 'Modifica', edit_todo_path(todo) %>
      </th>
    </tr>
  <% end %>
</table>
